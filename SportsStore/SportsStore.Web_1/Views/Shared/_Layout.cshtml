<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>Web</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <meta author="hoso">
    
</head>
<body>
    <main class="m-auto">
        <header>
            <div class="row">
                <div class="col-4">
                    <a href="/"><img src="~/Resources/logo.png" height="100px" width="100px"></a>
                   
                </div>
                <div class="col-8">
                    <form action="~/Views/Product/Serch.cshtml" method="get"></form>
                </div>
            </div>
        </header>
        <nav class="navbar navbar-expand navbar-light bg-light top-nav sticky-top">
            <ul class="nav navbar-nav ">
                <li class="nav-item"><a href="/" class="btn btn-light nav-link">Home</a></li>
                <li class="nav-item"><a href="#" class="btn btn-light nav-link">News</a></li>
                <li class="nav-item"><a href="#" class="btn btn-light nav-link">About</a></li>
                <li class="nav-item"><a href="#" class="btn btn-light nav-link">Contact</a></li>
                <li class="nav-item"> @{Html.RenderAction("Summary", "Cart");}</li>
                <li class="nav-item">
                    @using (Html.BeginForm("Serch", "Product", FormMethod.Get))
                    {

                        @Html.TextBox("serchString")
                        <input type="submit" value="Serch" />
                    }
                    @*<a href="~/Product/Serch" class="btn btn-light nav-link">
                        <img src="~/Resources/serch.png" height="30px" width="30px" />
                    </a>*@

                </li>
            </ul>
        </nav>
        <div class="row middle-content">
            <aside class="col-2 bg-light">
                <nav class="navbar  navbar-light bg-light">
                    <ul class="nav navbar-nav ">
                        @{Html.RenderAction("Menu", "Navi");}


                    </ul>
                </nav>
            </aside>
            <div class="col-10 container">
                <div class="products">
                    <br><br><br>

                    @RenderBody()
                </div>
            </div>
        </div>
        <footer>
            <div class="footer1  row">
                <div class="footer-logo col-3">
                    <img src="~/Resources/logo.png" height="100px" width="100px">
                    <nav>
                        <a class=" btn-social-icon btn-facebook">
                            <img src="~/Resources/facebook.png" width="50px" height="50px">
                        </a>
                        <a class=" btn-social-icon btn-twitter ">
                            <img src="~/Resources/twitter.png" width="50px" height="50px">
                        </a>
                        <a class=" btn-social-icon btn-instagram ">
                            <img src="~/Resources/instagram.png" width="50px" height="50px">
                        </a>
                        <a class=" btn-social-icon btn-google ">
                            <img src="~/Resources/google.png" width="50px" height="50px">
                        </a>
                    </nav>
                </div>
                <nav class="navbar col-3">
                    <ul class="nav navbar-nav">
                        <li class="nav-item"><a href="#" class="text-light nav-link">Home</a></li>
                        <li class="nav-item"><a href="#" class="text-light nav-link">News</a></li>
                        <li class="nav-item"><a href="#" class="text-light nav-link">About</a></li>
                        <li class="nav-item"><a href="#" class="text-light nav-link">Contact</a></li>
                    </ul>
                </nav>
                <table class="table col-3 text-light">
                    <tr id="border-none">
                        <td>Email</td>
                        <td>someone@gmail.com</td>
                    </tr>
                    <tr>
                        <td>Phone</td>
                        <td>+374-88-88-88</td>
                    </tr>
                    <tr>
                        <td>Location</td>
                        <td>Armenia,Yerevan</td>
                    </tr>
                    <tr>
                        <td>Adress</td>
                        <td>3 Mas</td>
                    </tr>
                </table>

            </div>
            <div class="footer2  bg-light">
                <p class="text-center">&#9400;COPYRIGHT 2020 STAFF.AM. ALL RIGHTS RESERVED.</p>
            </div>
        </footer>
    </main>
    <script>
        let links = $(".site-pagination a");
        $(".middle-content aside nav ul li a").addClass("btn btn-light nav-link");
        for (var i = 0; i < links.length; i++) {
            //links[i].addClass("page-link");
            $("<li>").addClass("page-item").appendTo($(".site-pagination")).append(links[i]);
        }
        links.addClass("page-link");
    </script>
</body>

</html>

